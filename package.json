{
  "name": "cross-aria2",
  "version": "0.0.1",
  "description": "Cross-platform wrapper of aria2",
  "main": "main.js",
  "scripts": {
    "start": "electron src/main.js",
    "build:web": "cd ariang && gulp clean build && cp -frp dist ../src/public",
    "build:app": "electron-packager ./src cross-aria2 --platform=darwin --arch=x64 --overwrite --icon=./src/icon/icon",
    "prebuild": "cp package.json src/package.json",
    "build": "npm run clean && npm run build:web && npm run build:app",
    "clean": "rm -fr cross-aria2-* && rm -fr src/public",
    "update-aria2:osx": "cp -f /usr/local/bin/aria2c ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gucheen/cross-aria2.git"
  },
  "keywords": [
    "aria2",
    "cross-platform"
  ],
  "author": "guchengf@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gucheen/cross-aria2/issues"
  },
  "homepage": "https://github.com/gucheen/cross-aria2#readme",
  "devDependencies": {
    "electron": "^1.7.10",
    "electron-packager": "^10.1.0"
  },
  "dependencies": {
    "cross-spawn": "^5.1.0"
  }
}
